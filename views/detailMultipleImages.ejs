<!DOCTYPE html>
<html>
<%- include('./partials/head') %>

    <body>
        <%- include('./partials/header') %>
        <main class="container">

            <section class="row mt-5">

                <article class="col-12 col-md-8  mx-auto">
                    <div class="card shadow">
                        <div class="card-header">
                            <h5>Producto con VARIAS im√°genes</h5>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-5">
                                    <img src="/images/products/<%= images.length ? images[0] : 'default-image.png' %>" class="img-fluid w-100" alt="..." id="imgMain">
                                    <div class="d-flex justify-content-between mt-3">
                                        <% images.forEach(image => { %>
                                            <img src="/images/products/<%= image %>" class="img-fluid" alt="..." width="30%" onclick="document.getElementById('imgMain').setAttribute('src',event.target.src)" style="cursor:pointer">
                                        <% }) %>

                                      
                                    </div>
                                </div>
                                <div class="col-7">
                                    <h4>
                                        Nombre del producto
                                    </h4>
                                    <hr>
                                    <p class="card-text">
                                       Lorem ipsum dolor sit amet consectetur adipisicing elit. Culpa, cum!
                                    </p>
                                </div>
                            </div>


                        </div>
                    </div>
                </article>

            </section>
        </main>
            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"
                integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN"
                crossorigin="anonymous"></script>
    </body>

</html>