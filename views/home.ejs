<!DOCTYPE html>
<html>
<%- include('./partials/head') %>
  <body class="">
    <%- include('./partials/header') %>
    <main class="container mt-5">
    <h1 class="mb-4">UpLoad Manager</h1>
    <div class="d-flex justify-content-between">
      <h2>Productos con UNA imagen</h2>
      <a href="/products/add-multiple-images" class="btn btn-outline-dark">Agregar</a>
    </div>
    
    <hr>
      <section class="row mb-5">
        <% productsOneImage.forEach(product => { %>
          <div class="col-12 col-md-4 col-lg-3">
            <%- include('./partials/cardOneImage',{
              ...product
            }) %>
          </div>
        
        <% }) %>
       
    </section>

    <div class="d-flex justify-content-between">
      <h2>Productos con VARIAS imágenes</h2>
      <a href="/products/add-multiple-images" class="btn btn-outline-dark">Agregar</a>
    </div>
    <hr>
    <section class="row mb-5">

      <% productsMultipleImages.forEach(product => { %>
        <div class="col-12 col-md-4 col-lg-3">
        <%- include('./partials/cardMultipleImages',{
          ...product
        }) %>
      </div>
      <% }) %>
     

    </section>

    <div class="d-flex justify-content-between">
      <h2>Productos con UNA imagen PRINCIPAL y VARIAS imágenes secundarias</h2>
      <a href="/products/add-main-image" class="btn btn-outline-dark">Agregar</a>
    </div>
    <hr>
    <section class="row mb-5">

      <% productsMainImage.forEach(product => { %>
        <div class="col-12 col-md-4 col-lg-3">
        <%- include('./partials/cardMainImage',{
          ...product
        }) %>
      </div>
      <% }) %>

    </section>
  </main>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js" integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN" crossorigin="anonymous"></script>
  </body>
</html>
